{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".next/server",
    "noEmit": false
  },
  "include": [
    "lib/tts-engine/**/*.ts"
  ],
  "exclude": ["node_modules"]
}