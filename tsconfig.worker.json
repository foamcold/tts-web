{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": ".next/server",
    "rootDir": ".",
    "noEmit": false
  },
  "include": [
    "lib/tts-engine/**/*.ts"
  ],
  "exclude": ["node_modules"]
}